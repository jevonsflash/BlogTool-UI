<Page x:Class="BlogTool.View.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      DataContext="{Binding Source={StaticResource Locator},Path=Home}"
      Unloaded="Page_Unloaded"
      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="ProcedurePage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left">
                <Button  Content="打开"
                         Command="{Binding ImportFromLocalCommand}"
                         Width="120"></Button>

                <Button  Content="剪贴板"
                         Command="{Binding ImportFromClipboardCommand}"
                         Width="120"></Button>
            </StackPanel>

            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right">
                <Button Name="DownButton1"
                        Margin="5"
                        Width="120"
                        Content="刷新"
                        Command="{Binding RefreshCommand}">

                </Button>
            </StackPanel>
        </Grid>
        <StackPanel Grid.Row="1">

            <TextBlock TextWrapping="Wrap">文章路径:  <Hyperlink Click="Hyperlink_Click2"><TextBlock x:Name="FileUrlTextBlock"
                                                                                                 Text=".."></TextBlock></Hyperlink></TextBlock>

        </StackPanel>
   
        <Grid Grid.Row="2">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <TextBox Grid.Row="0"
                               Text="{Binding MarkdownContent.Title}"></TextBox>
                    <TextBox Grid.Row="1"
                             Text="{Binding MarkdownContent.Keywords}"></TextBox>

                    <TextBox Grid.Row="2"
                               Text="{Binding MarkdownContent.Description}"></TextBox>
                    <TextBox Grid.Row="3"
                             Text="{Binding MarkdownContent.Title}"></TextBox>

                </Grid>
                <GridSplitter Grid.Column="1"
                              Width="5"
                              Margin="15,0"></GridSplitter>
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <WebBrowser x:Name="Web1"></WebBrowser>
                    <TextBox Grid.Row="1"
                               Grid.RowSpan="3"
                               Grid.Column="1"
                               Text="{Binding MarkdownContent.Content}"></TextBox>
                </Grid>

            </Grid>

           


        </Grid>

        <Grid Grid.Row="3">
            <Button Click="Button_Click"></Button>
        </Grid>

    </Grid>
</Page>
