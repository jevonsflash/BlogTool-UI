<Page x:Class="BlogTool.View.ImportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      DataContext="{Binding Source={StaticResource Locator},Path=ImportPage}"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BlogTool.View"
      xmlns:control="clr-namespace:BlogTool.Control" xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="IndexPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Left" >
                <mah:DropDownButton Name="DownButton1"
                                    Margin="5"                                    
                                    Width="120"
                                    Content="导入.."
                                    DisplayMemberPath="Title"
                                    ItemsSource="{Binding ImportOptions}"
                                    Orientation="Horizontal">
                    <mah:DropDownButton.ItemContainerStyle>
                        <Style BasedOn="{StaticResource MahApps.Styles.MenuItem}" TargetType="MenuItem">
                            <Setter Property="Command" Value="{Binding Command}" />
                        </Style>
                    </mah:DropDownButton.ItemContainerStyle>
                </mah:DropDownButton>

                <Button Content="验证" Command="{Binding ValidDataCommand}" Width="120"></Button>

            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right" >
                <Button Content="完成导入" x:Name="SaveToButton" Command="{Binding SubmitCommand}" Width="120"></Button>

            </StackPanel>
        </Grid>
        <Grid Grid.Row="1" >
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
            </Grid.RowDefinitions>
            <DataGrid Grid.Row="0"
						VerticalScrollBarVisibility="Visible"
	                  AutoGenerateColumns="True"
	                  AutoGeneratingColumn="DataGrid_OnAutoGeneratingColumn"
	                  ItemsSource="{Binding Entities}">
            </DataGrid>
            <GridSplitter Grid.Row="1" Height="5" Margin="0,15,0,15"></GridSplitter>
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                

                <DataGrid Grid.Row="1"
						VerticalScrollBarVisibility="Visible"
			          AutoGenerateColumns="False"
			          AutoGeneratingColumn="DataGrid_OnAutoGeneratingColumn"
			          ItemsSource="{Binding ProcessResultList}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}"></DataGridTextColumn>
                        <DataGridTextColumn Header="时间" Binding="{Binding CreationTime}"></DataGridTextColumn>
                        <DataGridTextColumn Header="内容" Binding="{Binding Content}"></DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Label Content="消息计数："></Label>
            <Label Content="{Binding ProcessResultList.Count}"></Label>
        </StackPanel>


    </Grid>
</Page>
