<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converter="clr-namespace:BlogTool.Converter"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:control="clr-namespace:BlogTool.Control">
    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Background" Value="White"/>
    </Style>
    <Style TargetType="{x:Type control:CategoryComboBox}" BasedOn="{StaticResource {x:Type ComboBox}}">
       
    </Style>
    <Thickness Left="20" Right="20"  Top="0"  Bottom="0" x:Key="DefaultMargin"></Thickness>
</ResourceDictionary>

